<% if !@news_releases.empty? %>
    <span class="label-green">NEWS RELEASES</span></br></br>
    <% @news_releases.each do |nr| %>
      <div class="card">
        <div class="card-image">
          <div class="article-img">
            <%= link_to image_tag(nr["image"]["url"]), nr["url"], class: "responsive-img"  %>
          </div>
        </div> <!--end card image-->
   
        <div class="card-content">
          <span class="card-title"><b><%= link_to nr["title"], nr["url"] %></b></span>
          <%= nr["abstract"] %>
        </div>

        
        
      </div>
    <% end %>
  <% end %>