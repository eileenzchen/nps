  </br></br>
  <% for article in @articles["data"] do %>
    <div class="row">
      <div class="card col s8">
        <div class="card-content">
          
          <h5><%= link_to article["title"], article["url"], class: "search-output-link"%></h5>
          
          <%= article["listingdescription"]%>        
        </div>
      </div>
    </div>
  <% end %>

<% end %>


